{
  "compilerOptions": {
    "rootDir": "./src/",
    "outDir": "./dist/",
    "sourceMap": true,
    "declaration": true,
    "declarationDir": "dist",
    "declarationMap": true,
    "noImplicitAny": true,
    "module": "es6",
    "target": "es5",
    "jsx": "react",
    "allowJs": true,
    "esModuleInterop": true,
    "moduleResolution": "node"
  },
  "exclude": [
    "./test/*",
    "./dist/*",
    "./*.js"
  ]
}
